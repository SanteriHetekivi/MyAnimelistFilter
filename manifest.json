{
  "manifest_version": 2,

  "name": "MyAnimeList Filter",
  "description": "Removes manga from your list from supported sites.",
  "version": "1.0",

 "background" : {
    "scripts" : ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab", 
    "tabs",
    "http://*/", 
    "https://*/"
    ]
}
